@page "/patients"

<h3>Patients</h3>

@if (patients == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in patients)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.FullName</td>
                <td>@p.Email</td>
            </tr>
        }
        </tbody>
    </table>
}