@page "/patients"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<h3>Patients</h3>

@if (patients == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in patients)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.FullName</td>
                <td>@p.Email</td>
                <td>
                    <button class="btn btn-primary" @onclick="() => EditPatient(p.Id)">Edit</button>
                    <button class="btn btn-danger" @onclick="() => DeletePatient(p.Id)">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <button class="btn btn-success" @onclick="AddPatient">Add Patient</button>
}