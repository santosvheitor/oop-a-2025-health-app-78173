@page "/register"
@using HealthApp.Blazor.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h3>Register</h3>

<EditForm Model="@registerModel" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Full Name:</label>
        <InputText @bind-Value="registerModel.FullName" />
    </div>

    <div>
        <label>Email:</label>
        <InputText @bind-Value="registerModel.Email" />
    </div>

    <div>
        <label>Password:</label>
        <InputText @bind-Value="registerModel.Password" type="password" /> 
    </div>

    <div>
        <label>Role:</label>
        <InputSelect @bind-Value="registerModel.Role">
            <option value="">Select a role</option>
            <option value="Patient">Patient</option>
            <option value="Doctor">Doctor</option>
            <option value="Admin">Admin</option>
        </InputSelect>
    </div>

    @if (registerModel.Role == "Doctor")
    {
        <div>
            <label>Specialty:</label>
            <InputText @bind-Value="registerModel.Specialty" placeholder="Specialty" />
        </div>
    }

    <button type="submit">Register</button>
</EditForm>

<p>@message</p>

@code {
    private RegisterModel registerModel = new();
    private string message = "";

    private async Task HandleRegister()
    {
        var response = await Http.PostAsJsonAsync("api/account/register", registerModel);

        if (response.IsSuccessStatusCode)
        {
            message = "Registration successful!";
            NavigationManager.NavigateTo("/login");
        }
        else
        {
            var errorResponse = await response.Content.ReadAsStringAsync();
            message = $"Registration failed: {errorResponse}";
        }
    }
}