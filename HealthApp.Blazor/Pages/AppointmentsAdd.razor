@page "/appointments/add"
@using HealthApp.Domain.Models

<h3>Add Appointment</h3>

@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="@appointment" OnValidSubmit="HandleAddAppointment">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Patient:</label>
            <!-- Corrigido para @bind-Value para nÃ£o gerar erro no InputText -->
            <InputText class="form-control" @bind-Value="patientFullName" Disabled="true" />
        </div>

        <div class="mb-3">
            <label>Doctor:</label>
            <select class="form-control" @bind="appointment.DoctorId">
                <option value="0">Select Doctor</option>
                @foreach (var doctor in doctors)
                {
                    <option value="@doctor.Id">@doctor.FullName</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label>Date:</label>
            <InputDate @bind-Value="appointment.Date" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Notes:</label>
            <InputTextArea @bind-Value="appointment.Notes" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </EditForm>
}