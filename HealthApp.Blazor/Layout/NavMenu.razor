@using HealthApp.Blazor.Auth
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HealthApp.Blazor</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- 👇 Controle de autenticação -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="patients">
                        <i class="fas fa-user-injured"></i>
                        <span>Patients</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="doctors">
                        <i class="fas fa-user-md"></i>
                        <span>Doctors</span>
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="appointments">
                        <i class="fas fa-calendar-check"></i>
                        <span>Appointments</span>
                    </NavLink>
                </div>

                <!-- ✅ Novo link: Prontuários Médicos -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="medicalrecords">
                        <i class="fas fa-notes-medical"></i>
                        <span>Medical Records</span>
                    </NavLink>
                </div>

                <!-- 🔹 Botão de Logout -->
                <div class="nav-item px-3">
                    <a class="nav-link" href="#" @onclick="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Login</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <i class="fas fa-user-plus"></i>
                        <span>Register</span>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@inject IJSRuntime JS
@inject CustomAuthStateProvider AuthProvider
@inject NavigationManager Nav

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task Logout()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
        AuthProvider.NotifyUserLogout();
        Nav.NavigateTo("/login");
    }
}
